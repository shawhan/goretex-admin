<script type="text/javascript">
	var options ={
        thumbBox: '.thumb-box',
        imgSrc: ''
    }
    var cropper = $('.image-box').cropbox(options);
    $('.upload-crop-image').on('change', 'input[name="photo"]', function(){
        var reader = new FileReader();
        reader.onload = function(e) {
            options.imgSrc = e.target.result;
            cropper = $('.image-box').cropbox(options);
        }
        reader.readAsDataURL(this.files[0]);
        this.files = [];
    }).on('click', '.btnZoomIn', function(){
    	cropper.ratio*=1.1;
		var w =  parseInt(cropper.image.width) * cropper.ratio
	    	, h =  parseInt(cropper.image.height) * cropper.ratio
			, pw = ($('.image-box').width() - w) / 2
	    	, ph = ($('.image-box').height() - h) / 2;
	    $('.image-box').css({
	        'background-size': w +'px ' + h + 'px',
	        'background-position': pw + 'px ' + ph + 'px'
	    });
    }).on('click', '.btnZoomOut', function(){
    	cropper.ratio*=0.9;
		var w =  parseInt(cropper.image.width) * cropper.ratio
	    	, h =  parseInt(cropper.image.height) * cropper.ratio
			, pw = ($('.image-box').width() - w) / 2
	    	, ph = ($('.image-box').height() - h) / 2;
	    $('.image-box').css({
	        'background-size': w +'px ' + h + 'px',
	        'background-position': pw + 'px ' + ph + 'px'
	    });
    }).on('mousewheel', '.image-box', function(e){
    	e.stopImmediatePropagation();
		if(e.originalEvent.wheelDelta > 0 || e.originalEvent.detail < 0){
			cropper.ratio*=1.1;
		} else {
			cropper.ratio*=0.9;
		}
		var w =  parseInt(cropper.image.width) * cropper.ratio
			, h =  parseInt(cropper.image.height) * cropper.ratio
			, pw = ($('.image-box').width() - w) / 2
			, ph = ($('.image-box').height() - h) / 2;
		$('.image-box').css({
		    'background-size': w +'px ' + h + 'px',
		    'background-position': pw + 'px ' + ph + 'px'
		});
    });
    $('.form-submit-btn').click(function(e){
		e.preventDefault();
		if($('input[name=photo]').val() !== ""){
			$('input[name=photo_data]').val(cropper.getDataURL());
			$('form').submit();
		}
		$('form').submit();
	});
